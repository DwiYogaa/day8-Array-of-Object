<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/style.css">
    <title>My Project</title>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg ">
      <div class="container">
        <a class="navbar-brand" href='/'>
          <img src="/public/assets/logo.png" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active text-dark" aria-current="page" href='/'>Home</a>
            </li>
            <li class="nav-item ">
              <a class="nav-link active text-dark nav-icon-active" href='/my-project' >Add Project</a>
            </li>
          </ul>
          <a href='/contact-me' class="btn btn-contactMe text-white">Contact Me</a>
        </div>
      </div>
    </nav>

    <!-- create project -->
    <section class="containerProject  d-flex justify-content-center align-items-center">
       <form class="newProject" action='/my-project' method='POST'>
          <h4 class="d-flex justify-content-center">Add My PROJECT</h4>
          <div class="mb-2">
            <label for="projectName" class="form-label">Project Name</label>
            <input type="text" class="form-control" name="projectName"  id="projectName" >
          </div>
          <div class="row mb-2">
            <div class="col">
              <label>Start Date</label>
              <input type="date" class="form-control" name="start-input" id="start-input" >
            </div>
            <div class="col">
              <label>End Date</label>
              <input type="date" class="form-control" name="end-input" id="end-input">
            </div>
          </div>
          <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="description" rows="3" ></textarea>
          </div>
          <div class="tech-input d-flex">
            <label for="check-box-detail">Technologies</label>
            <div class="left-checkbox">
              <div>
                <input value="angular" type="checkbox"  name="angular" id="angular"/>
                <label for="node">Angular JS</label>
              </div>
              <div>
                <input value="react" type="checkbox" name="react" id="react" />
                <label for="react">React JS</label>
              </div>
            </div>

            <div class="right-checkbox">
              <div>
                <input value="node" type="checkbox" name="node" id="node"/>
                <label for="node">Node JS</label>
              </div>
              <div>
                <input value="vue" type="checkbox" name="vue" id="vue"/>
                <label for="vue">Vue JS</label>
              </div>
            </div>
          </div>
          <div class="input-group mb-3 mt-3">
            <input type="file" class="form-control" name="upload" id="upload">
            <label class="input-group-text" for="inputGroupFile02">
              <img src="/public/assets/file.png" alt="">
            </label>
          </div>
          <div class="d-flex justify-content-end">
            <button class="btn text-white submit active" type="submit">Submit</button>
          </div>
       </form>
    </section>
  
      

</body>
<script src="assets/js/myProject.js"></script>

</html>
